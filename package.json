{
  "name": "monorepo-base",
  "private": true,
  "license": "MIT",
  "engines": {
    "yarn": ">=1.15.2"
  },
  "scripts": {
    "format": "wsrun -c format",
    "format:fix": "wsrun -c format:fix",
    "lint": "wsrun -c lint",
    "lint:fix": "wsrun -c lint:fix",
    "typecheck": "wsrun -c typecheck",
    "build": "wsrun -te -c build",
    "test": "wsrun -c test",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn test && yarn typecheck"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "wsrun": "^5.2.0"
  }
}
